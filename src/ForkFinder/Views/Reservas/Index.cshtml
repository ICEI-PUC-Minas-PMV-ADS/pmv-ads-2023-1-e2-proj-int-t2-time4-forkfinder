@model IEnumerable<Reserva>
@{
    ViewData["Title"] = "List of Reserva";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.DataHoraCriacao)</th>
                    <th>@Html.DisplayNameFor(model => model.DataHoraReserva)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.Situacao)</th>
                    <th>@Html.DisplayNameFor(model => model.Mesa.TamanhoMesa)</th>
                    <th>@Html.DisplayNameFor(model => model.Mesa.QuantidadeMesa)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DataHoraCriacao)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DataHoraReserva)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Mesa.TamanhoMesa)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Mesa.QuantidadeMesa)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Situacao)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>