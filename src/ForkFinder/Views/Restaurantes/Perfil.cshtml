@model ForkFinder.Models.Restaurante

<h2>Perfil do Restaurante</h2>

<div>
    <h4>Informações do Restaurante</h4>
    <hr />
    <dl class="row">
        <!-- informações do perfil -->

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">CNPJ:</dt>
        <dd class="col-sm-10">@Model.CNPJ</dd>

        <dt class="col-sm-2">Foto Perfil:</dt>
        <dd class="col-sm-10">
            @if (Model.FotoPerfil != null && Model.FotoPerfil.Length > 0)
            {
                //<img src="data:image;base64,@Convert.ToBase64String(Model.FotoPerfil)" alt="Foto Perfil" class="img-thumbnail" />
            }
            else
            {
                <span>Nenhuma foto de perfil encontrada.</span>
            }
        </dd>

        <dt class="col-sm-2">Descrição:</dt>
        <dd class="col-sm-10">@Model.DescricaoRestaurante</dd>

        <dt class="col-sm-2">Acessibilidade:</dt>
        <dd class="col-sm-10">@Model.Acessibilidade</dd>
    </dl>
</div>

<button class="btn btn-primary" data-toggle="modal" data-target="#editProfileModal">Editar Perfil</button>

<!-- Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editProfileModalLabel">Editar Perfil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editProfileForm" asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="CNPJ">CNPJ</label>
                        <input asp-for="CNPJ" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="FotoPerfil">Foto de Perfil</label>
                        <input asp-for="FotoPerfil" type="file" class="form-control-file" />
                    </div>

                    <div class="form-group">
                        <label asp-for="DescricaoRestaurante">Descrição</label>
                        <textarea asp-for="DescricaoRestaurante" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="Acessibilidade">Acessibilidade</label>
                        <input asp-for="Acessibilidade" type="checkbox" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="submit" form="editProfileForm" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
