@model ForkFinder.ViewModels.AgendaViewModel

@{
    ViewData["Title"] = "Agenda";
}

<h1>Agenda</h1>

<div id="dateCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.DataMesas.Count; i++) //bug parece que ta na lista que ta carregando. Como ta chamando uma lista DataTime ta bugando. Tenta por o nome do namespace
        {
            <li data-target="#dateCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <div class="carousel-inner">
        @for (int i = 0; i < Model.DataMesas.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <h4 class="text-center">@Model.DataMesas[i].ToString("dd/MM/yyyy")</h4>
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#dateCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#dateCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="table-responsive mt-4">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                @foreach (var horario in Model.Horarios)
                {
                    <th>@horario</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var mesa in Model.Mesas)
            {
                <tr>
                    <th>@mesa.Descricao</th>
                    @foreach (var horario in Model.Horarios)
                    {
                        <td>@Html.RadioButtonFor(m => m.SelectedAgenda, $"{mesa.Id}_{horario}")</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<button type="submit" class="btn btn-primary">Reservar</button>

