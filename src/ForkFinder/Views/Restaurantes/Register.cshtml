@model Restaurante
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Cadastro</h2>

<div class="justify-content-center">
    <div class="row justify-content-center">
        <div class="col-md-auto card py-3" style="width: 26rem;">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-warning" id="profile-tab" data-bs-toggle="tab" data-bs-href="/Clientes/Register"
                            type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">
                        Cliente
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link active text-warning" data-bs-toggle="tab"
                            type="button" role="tab" aria-controls="profile-tab-pane"
                            aria-selected="false">
                        Restaurante
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="cliente-tab-pane" role="tabpanel" aria-labelledby="cliente-tab" tabindex="0">
                    <form asp-action="Register">
                        <h4>Criar conta Restaurante.</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group py-2">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group py-2">
                            <label asp-for="CNPJ"></label>
                            <input asp-for="CNPJ" class="form-control" />
                            <span asp-validation-for="CNPJ" class="text-danger"></span>
                        </div>
                        <div class="form-group py-2">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group py-2">
                            <label asp-for="Senha"></label>
                            <input asp-for="Senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group text-end py-2">
                            <button type="submit" class="btn btn-warning py-2">Cadastrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#profile-tab").on("click", function () {
                var href = $(this).data("bs-href");
                window.location.href = href;
            });
        });
    </script>
}
