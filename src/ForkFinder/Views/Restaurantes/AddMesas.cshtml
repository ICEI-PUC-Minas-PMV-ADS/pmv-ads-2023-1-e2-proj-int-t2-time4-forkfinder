@model MesaViewModel

@{
    ViewData["Title"] = "AddMesas";
}

<div class="container">
    <div class="row justify-content-end mb-3">
        <div class="col-auto">
            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalCriarMesa">
                <i class="bi bi-plus-lg"></i> Adicionar Mesa
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h2>Lista de Mesas</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tamanho</th>
                        <th>Quantidade</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mesa in Model.Mesas)
                    {
                        <tr>
                            <td>@mesa.TamanhoMesa</td>
                            <td>@mesa.QuantidadeMesa</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal de criação de mesas -->
    <div class="modal fade" id="modalCriarMesa" tabindex="-1" aria-labelledby="modalCriarMesaLabel" aria-hidden="true">
        <form asp-action="Create" method="post">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalCriarMesaLabel">Adicionar Mesa</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col">
                                <label for="tamanhoMesa" class="form-label">Tamanho:</label>
                                <input type="text" class="form-control" id="tamanhoMesa" asp-for="TamanhoMesa" placeholder="Digite o tamanho da mesa">
                            </div>
                            <div class="col">
                                <label for="quantidadeMesa" class="form-label">Quantidade:</label>
                                <input type="number" class="form-control" id="quantidadeMesa" asp-for="QuantidadeMesa" min="1" value="1">
                            </div>
                        </div>
                        @{

                            int i = 0;
                        }
                        @foreach (var mesa in Model.Mesas)
                        {
                            <input type="hidden" asp-for="Mesas[i].Id" value="@mesa.Id" />
                            <div class="row mb-3">
                                <div class="col">
                                    <label class="form-label">Tamanho:</label>
                                    <input type="text" class="form-control" asp-for="Mesas[i].TamanhoMesa" placeholder="Digite o tamanho da mesa">
                                </div>
                                <div class="col">
                                    <label class="form-label">Quantidade:</label>
                                    <input type="number" class="form-control" asp-for="Mesas[i].QuantidadeMesa" min="1" value="@mesa.QuantidadeMesa">
                                </div>
                            </div>
                            i++;
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


