@model IEnumerable<Restaurante>
@{
    ViewData["Title"] = "List of Restaurantes";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
    <table class="table">
        <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.FotoPerfil)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.CNPJ)</th>                
                <th>@Html.DisplayNameFor(model => model.DescricaoRestaurante)</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td class="align-middle">
                            <img class="rounded-circle" src="@item.FotoPerfil" alt="@item.Nome" style="max-width:150px; min-height:150px;" />
                    </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DescricaoRestaurante)
                </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary px-2 py-2"><i class="bi bi-pencil-square"></i></a> |
                            <a class="btn btn-outline-info px-2 py-2"><i class="bi bi-eye"></i></a> |
                            <a class="btn btn-danger text-white px-2 py-2"><i class="bi bi-trash"></i></a>
                    </td>

            </tr>
            }
        </tbody>
    </table>
    </div>
</div>