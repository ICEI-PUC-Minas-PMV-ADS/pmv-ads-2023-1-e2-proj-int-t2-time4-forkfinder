@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="justify-content-center">
    <div class="row justify-content-center">
        
        <div class="col-md-auto card" style="width: 26rem;">
            <section>
                <form id="account" method="post">
                    <h4 class="py-3">Utilize suas credenciais para logar.</h4>
                    <hr/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group py-2">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control text-light" />
                        <span asp-validation-for="Input.Email" class="text-danger "></span>
                    </div>
                    <div class="form-group py-2">
                        <label asp-for="Input.Password">Senha</label>
                        <input asp-for="Input.Password" class="form-control text-light" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group py-2">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-end py-2">
                        <button type="submit" class="btn btn-warning">Log in</button>
                    </div>
                    <div class="form-group text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Novo cadastro</a>
                        </p>
                        @*<p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                    </div>
                </form>
            </section>
        </div>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
