@model fork_finder.Models.Especialidade

@{
    ViewData["Title"] = "Edit";
}


<h4>Editar Especialidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EspecialidadeId" />
            <div class="form-group">
                <label asp-for="NomeEspecialidade" class="control-label"></label>
                <input asp-for="NomeEspecialidade" class="form-control" />
                <span asp-validation-for="NomeEspecialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <input asp-for="ImagemUpload" class="form-control" />
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
