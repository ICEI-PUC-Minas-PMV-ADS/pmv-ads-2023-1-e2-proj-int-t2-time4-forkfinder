@model fork_finder.Models.RestauranteEspecialidade

@{
    ViewData["Title"] = "Tipo";
}

<div>
    <h4>Restaurante por Especialidade</h4>
    <hr />
    <div>
        <a class="btn btn-warning" asp-controller="Restaurantes" asp-action="Index">Voltar</a>
        @if (User.IsInRole("Admin, Restaurante")){
        <a class="btn btn-primary align-items-end" asp-action="Edit" asp-route-id="@Model.Id">Editar btn adm</a>
        }
    </div>
<div class="container">
        <div class="row align-items-center justify-content-start">
        
            @foreach (var item in Model.Restaurantes)
            {
                <div class="col-4">
                <a asp-controller="Restaurantes" asp-action="Details" asp-route-id="@item.Id">
                    <div class="row align-items-center justify-content-start border">
                        <div class="col-6">

                            @Html.DisplayFor(modelItem => item.FotoPerfil)

                        </div>
                    
                        <div class="col-6 my-0">
                            <div class="row">
                                <div class="col-4">
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </div>
                                <div class="col-4">
                                    @Html.DisplayFor(modelItem => item.RestauranteEspecialidade.NomeEspecialidade)
                                </div>
                                <div class="col-4">
                                    @Html.DisplayFor(modelItem => item.ClienteAvaliacoes)
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
                </div>
            }
        </div>
</div>
</div>